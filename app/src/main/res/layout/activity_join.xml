<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f4e3d3"
    android:gravity="center">
    <EditText
        android:id="@+id/user_name"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:textColor="#000000"
        android:textColorHint="#fac20c"
        android:paddingLeft="10dp"
        android:layout_marginBottom="10dp"
        android:hint="Name"
        android:textSize="20sp"/>
    <EditText
        android:id="@+id/edit_Email"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:textColor="#000000"
        android:textColorHint="#fac20c"
        android:paddingLeft="10dp"
        android:hint="UNIST portral E-mail"
        android:textSize="20sp"/>
    <Button
        android:id="@+id/btn_identification"
        android:layout_width="wrap_content"
        android:layout_height="15dp"
        android:background="@android:color/transparent"
        android:layout_marginRight="30dp"
        android:layout_gravity="right"
        android:gravity="right"
        android:textSize="10dp"
        android:text="인증번호전송"/>
    <EditText
        android:id="@+id/edit_Number"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:textColor="#000000"
        android:textColorHint="#fac20c"
        android:paddingLeft="10dp"
        android:hint="Verification Code"
        android:textSize="20sp"/>
    <Button
        android:id="@+id/btn_checknum"
        android:layout_gravity="right"
        android:layout_width="wrap_content"
        android:layout_height="15dp"
        android:background="@android:color/transparent"
        android:layout_marginRight="30dp"
        android:gravity="right"
        android:textSize="10dp"
        android:text="인증번호확인"/>
    <EditText
        android:id="@+id/edit_ID"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:textColor="#000000"
        android:textColorHint="#fac20c"
        android:paddingLeft="10dp"
        android:hint="ID"
        android:textSize="20sp"/>
    <Button
        android:id="@+id/btn_checkid"
        android:layout_width="wrap_content"
        android:layout_height="15dp"
        android:background="@android:color/transparent"
        android:textSize="10dp"
        android:text="중복확인"
        android:layout_gravity="right"
        android:gravity="right"
        android:layout_marginRight="30dp"/>
    <EditText
        android:id="@+id/edit_Password"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:textColor="#000000"
        android:textColorHint="#fac20c"
        android:paddingLeft="10dp"
        android:hint="Password"
        android:textSize="20sp"/>
    <EditText
        android:id="@+id/edit_PasswordRe"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:textColor="#000000"
        android:textColorHint="#fac20c"
        android:paddingLeft="10dp"
        android:hint="re Password"
        android:textSize="20sp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right">
        <TextView
            android:id="@+id/txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="패스워드 재확인"
            android:layout_marginRight="30dp"
            android:textColor="@android:color/holo_purple"
            android:textSize="10dp"
            android:layout_gravity="right" />
    </LinearLayout>
    <CheckBox
        android:id="@+id/chb_Agree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:textSize="10dp"
        android:text="제 3자에게 정보를 제공할 것을 동의합니다."/>
    <Button
        android:id="@+id/btn_registor"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:textSize="16dp"
        android:text="Join!"
        android:textColor="@android:color/white"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:background="#fac20c"
        android:shadowColor="@android:color/transparent"/>
</LinearLayout>