<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.unist.hexa.chickenq" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.unist.hexa.chickenq.SplashActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".SignInActivity" android:screenOrientation="portrait"/>
        <activity android:name=".BoardActivity" android:screenOrientation="portrait" android:theme="@style/AppTheme.NoActionBar"/>
        <activity android:name=".BoardWriteActivity" android:screenOrientation="portrait"/>
        <activity android:name=".BoardViewActivity" android:screenOrientation="portrait" android:windowSoftInputMode="adjustPan"/>
        <activity android:name=".PartyListActivity" android:screenOrientation="portrait"/>
        <activity android:name=".SignUpActivity" android:screenOrientation="portrait"/>
        <activity android:name=".InformationActivity" android:screenOrientation="portrait"/>
        <meta-data android:name="com.kakao.sdk.AppKey" android:value="@string/kakao_app_key" />

    </application>

</manifest>
